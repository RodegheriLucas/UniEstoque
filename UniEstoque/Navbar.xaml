<Page x:Class="UniEstoque.Navbar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UniEstoque"
      mc:Ignorable="d" 
      Background="Black"
      d:DesignHeight="920" d:DesignWidth="250"
      Title="Navbar">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DesignRes\Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <!-- Indice -->
        <TextBlock 
            x:Name="Indice" 
            FontSize="60" 
            Foreground="White" 
            Height="80" 
            Width="170" 
            VerticalAlignment="Top" 
            Grid.Row="0" 
            Margin="40,20" 
            HorizontalAlignment="Left"><Bold>Indice</Bold>
        </TextBlock>
        <!-- Botões Navbar -->
        <Button 
            x:Name="Dashboard" 
            Style="{StaticResource BotoesNavbar}"
            Click="Dashboard_Click" 
            Background="#FF1F1F1F" 
            BorderBrush="{x:Null}" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Center"
            Grid.Row="1">Dashboard</Button>
        <Button 
            x:Name="Funcionarios" 
            Style="{StaticResource BotoesNavbar}"
            Click="Funcionarios_Click" 
            Background="#FF1F1F1F" 
            BorderBrush="{x:Null}"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center">Funcionarios
        </Button>
        <Button
            x:Name="Estoque" 
            Style="{StaticResource BotoesNavbar}"
            Click="Estoque_Click"
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Center"
            Grid.Row="3">Estoque</Button>
        <Button 
            x:Name="Relatorios" 
            Style="{StaticResource BotoesNavbar}"
            Click="Relatorio_Click"
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Center" 
            Grid.Row="4">Relatórios
        </Button>
    </Grid>
</Page>
