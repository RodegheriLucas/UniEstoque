<Window x:Class="UniEstoque.DashboardTela"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniEstoque"
        mc:Ignorable="d"
        Title="Dashboard" 
        Height="920" 
        Width="1600"
        SizeToContent="Manual">
    <Grid>
        <!-- Definição da grade -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="533*"/>
            <ColumnDefinition Width="533*"/>
            <ColumnDefinition Width="503*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="189*"/>
            <RowDefinition Height="263.012"/>
            <RowDefinition Height="452*"/>
        </Grid.RowDefinitions>
        <!-- Barra de cabeçalho -->
        <Rectangle x:Name="HeaderBase" 
                   Grid.ColumnSpan="4" 
                   Height="120" 
                   VerticalAlignment="Top" 
                   Fill="#FF1F1F1F"/>
        <!-- Título -->
        <TextBlock x:Name="Title" 
                   Grid.ColumnSpan="4" 
                   Margin="0,13,0,13" 
                   TextAlignment="Center" 
                   Foreground="White" 
                   FontSize="70">
            <Bold>Dashboard</Bold>
        </TextBlock>
        <!-- Complemento da barra lateral -->
        <Rectangle x:Name="NavbarComplement" 
                   Grid.RowSpan="3" 
                   Grid.Column="0" 
                   Width="2" 
                   Fill="Black" 
                   HorizontalAlignment="Left"/>
        <!-- Botões de status -->
        <Rectangle Grid.ColumnSpan="1" 
                   Grid.Row="1" 
                   Margin="109,38,109,87" 
                   Fill="Black">
            <Rectangle.RadiusX>20</Rectangle.RadiusX>
            <Rectangle.RadiusY>20</Rectangle.RadiusY>
        </Rectangle>
        <Button x:Name="Finalizado" 
                Grid.Row="1" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Background="#FF1F1F1F" 
                Style="{StaticResource BotaoPadrao}"/>
        <Rectangle Grid.ColumnSpan="1" 
                   Grid.Row="1" 
                   Grid.Column="1" 
                   Margin="109,38,109,87" 
                   Fill="Black">
            <Rectangle.RadiusX>20</Rectangle.RadiusX>
            <Rectangle.RadiusY>20</Rectangle.RadiusY>
        </Rectangle>
        <Button x:Name="Pendente" 
                Grid.Row="1" 
                Grid.Column="1" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Style="{StaticResource BotaoPadrao}"/>
        <Rectangle Grid.ColumnSpan="1" 
                   Grid.Row="1" 
                   Grid.Column="2" 
                   Margin="109,38,109,87" 
                   Fill="Black">
            <Rectangle.RadiusX>20</Rectangle.RadiusX>
            <Rectangle.RadiusY>20</Rectangle.RadiusY>
        </Rectangle>
        <Button x:Name="Cancelado" 
                Grid.Row="1" 
                Grid.Column="2" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Style="{StaticResource BotaoPadrao}"/>
        <!-- Retângulo grande -->
        <Rectangle Grid.Row="1" 
                   Grid.RowSpan="2" 
                   Grid.ColumnSpan="3" 
                   Margin="350,258,320,5" 
                   Fill="Black" 
                   Height="452">
            <Rectangle.RadiusX>30</Rectangle.RadiusX>
            <Rectangle.RadiusY>30</Rectangle.RadiusY>
        </Rectangle>
        <!-- Navegação -->
        <Frame x:Name="NavbarFrame" 
               Grid.RowSpan="3" 
               Width="250" 
               HorizontalAlignment="Left" 
               NavigationUIVisibility="Hidden"/>

        <Button x:Name="NavbarButton" 
                Style="{StaticResource AcessarNavbar}"
                Click="Navbar_Click"/>
        <!-- Frame principal -->
        <Frame x:Name="MainFrame" 
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
