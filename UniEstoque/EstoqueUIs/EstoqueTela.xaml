<Window x:Class="UniEstoque.EstoqueTela"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniEstoque"
        mc:Ignorable="d"
        Background="Aqua"
        Title="Estoque" Height="920" Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="189*"/>
            <RowDefinition Height="263.012"/>
            <RowDefinition Height="452*"/>
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock 
            x:Name="Title" 
            FontSize="70" 
            Grid.ColumnSpan="3" 
            Margin="0,13"
            TextAlignment="Center" 
            Foreground="White"><Bold>Dashboard</Bold></TextBlock>
        <Rectangle 
            x:Name="HeaderBase" 
            Height="120" 
            Grid.ColumnSpan="3" 
            Fill="#FF1F1F1F" 
            VerticalAlignment="Top"></Rectangle>
        <!-- Título -->
        <TextBlock x:Name="Pagina" 
                   Grid.ColumnSpan="4" 
                   Margin="0,13,0,13" 
                   TextAlignment="Center" 
                   Foreground="White" 
                   FontSize="70">
            <Bold>Estoque</Bold>
        </TextBlock>
        <!-- Navbar -->
        <Frame x:Name="NavbarFrame" 
               Grid.RowSpan="3" 
               Width="250" 
               HorizontalAlignment="Left" 
               NavigationUIVisibility="Hidden"/>

        <Button x:Name="NavbarButton" 
                Style="{StaticResource AcessarNavbar}"
                Click="Navbar_Click"/>
    </Grid>
</Window>
