<Window x:Class="UniEstoque.DashboardTela"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniEstoque"
        mc:Ignorable="d"
        Title="Dashboard" 
        Height="920" Width="1600"
        SizeToContent="Manual"
        Style="{StaticResource MaterialDesignWindow}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DesignRes\Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="533*"></ColumnDefinition>
            <ColumnDefinition Width="533*"></ColumnDefinition>
            <ColumnDefinition Width="503*"></ColumnDefinition>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="189*"></RowDefinition>
            <RowDefinition Height="263.012"/>
            <RowDefinition Height="452*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock 
            x:Name="Title" 
            FontSize="70" 
            Grid.ColumnSpan="4" 
            Margin="0,13,0,13" 
            TextAlignment="Center" 
            Foreground="White">
            <Bold>Dashboard</Bold>
        </TextBlock>

        <Rectangle 
            x:Name="HeaderBase" 
            Height="120" 
            Grid.ColumnSpan="4" 
            Fill="#FF1F1F1F" 
            VerticalAlignment="Top">
        </Rectangle>

        <Rectangle 
            x:Name="NavbarComplement" 
            Grid.RowSpan="3" 
            Width="2" 
            Fill="Black" 
            HorizontalAlignment="Left" 
            Grid.Column="0">
        </Rectangle>

        <Frame 
            x:Name="NavbarFrame" 
            NavigationUIVisibility="Hidden"
            Width="250"
            HorizontalAlignment="Left"
            Grid.RowSpan="3"/>
        <Button 
            x:Name="NavbarButton"            
            Background="Black" 
            BorderBrush="{x:Null}" 
            Height="80" 
            Width="20"  
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Grid.Column="0" 
            Grid.RowSpan="2"
            Click="Navbar_Click"/>

        <Rectangle 
            Grid.ColumnSpan="1" 
            Fill="Black" 
            Margin="109,38,109,87" 
            Grid.Row="1">
            <Rectangle.RadiusX>20</Rectangle.RadiusX>
            <Rectangle.RadiusY>20</Rectangle.RadiusY>
        </Rectangle>

        <Rectangle 
            Grid.ColumnSpan="1" 
            Fill="Black" 
            Margin="109,38,109,87" 
            Grid.Row="1" 
            Grid.Column="1">
            <Rectangle.RadiusX>20</Rectangle.RadiusX>
            <Rectangle.RadiusY>20</Rectangle.RadiusY>
        </Rectangle>

        <Rectangle 
            Grid.ColumnSpan="1" 
            Fill="Black" 
            Margin="109,38,79,87" 
            Grid.Row="1" 
            Grid.Column="2">
            <Rectangle.RadiusX>20</Rectangle.RadiusX>
            <Rectangle.RadiusY>20</Rectangle.RadiusY>
        </Rectangle>

<!-- Status OS -->
        <Border 
            CornerRadius="10" 
            Background="#FF1F1F1F" 
            Margin="122,125,122,106" 
            Grid.Row="1">
            <Button 
                x:Name="Finalizado" 
                Background="#FF1F1F1F" 
                Margin="122,125,122,106" 
                Height="75"/>
        </Border>
            <Border 
                CornerRadius="10" 
                Background="#FF1F1F1F" 
                Margin="122,125,122,106" 
                Grid.Row="1" 
                Grid.Column="1">
                <Button 
                    x:Name="Pendente" 
                    Style="{StaticResource BotaoPadrao}" 
                    Grid.Column="1"/>
            </Border>
            <Border 
                CornerRadius="10" 
                Background="#FF1F1F1F" 
                Margin="122,125,92,106" 
                Grid.Row="1" 
                Grid.Column="2">
                <Button 
                    x:Name="Cancelado" 
                    Style="{StaticResource BotaoPadrao}" 
                    Grid.Column="2"/>
            </Border>

            <Rectangle 
                Grid.Row="1" 
                Fill="Black" 
                Grid.ColumnSpan="3" 
                Height="452" 
                Margin="350,258,320,5" 
                Grid.RowSpan="2">
                        <Rectangle.RadiusX>30</Rectangle.RadiusX>
                        <Rectangle.RadiusY>30</Rectangle.RadiusY>
            </Rectangle>

    <!-- Navegação -->
            <Frame 
                x:Name="MainFrame" 
                NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
