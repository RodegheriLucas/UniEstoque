<Window x:Class="UniEstoque.DashboardTela"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniEstoque"
        mc:Ignorable="d"
        Title="Dashboard" Height="920" Width="1600"
        SizeToContent="Manual"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="189*"></RowDefinition>
            <RowDefinition Height="263.012"/>
            <RowDefinition Height="452*"></RowDefinition>
        </Grid.RowDefinitions>
        <!--  Header  -->
        <TextBlock x:Name="Title" FontSize="70" Grid.ColumnSpan="3" Margin="0,13" TextAlignment="Center" Foreground="White"><Bold>Dashboard</Bold></TextBlock>
        <Rectangle x:Name="HeaderBase" Height="120" Grid.ColumnSpan="3" Fill="#FF1F1F1F" VerticalAlignment="Top"></Rectangle>
        <!-- Navbar -->
        <Rectangle x:Name="NavbarComplement" Grid.RowSpan="3" Width="250" Fill="Black" HorizontalAlignment="Left" Grid.Column="0" />
        <Button x:Name="NavbarButton" Background="Black" BorderBrush="{x:Null}" Height="80" Width="20" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" Margin="248,20"></Button>
        <Button x:Name="Dashboard" Width="200" Height="45" Margin="25,36" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0" BorderBrush="{x:Null}" Background="#FF1F1F1F" Foreground="White"/>
        <Button x:Name="Funcionarios" FontSize="25"  Background="#FF1F1F1F" Width="200" Height="45" Margin="25,60" VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0" BorderBrush="{x:Null}" Click="Funcionarios_Click" >Funcionario</Button>
        <Button x:Name="Estoque" Background="#FF1F1F1F" Width="200" Height="45" Margin="25,36" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0" Click="Estoque_Click" BorderBrush="{x:Null}"/>
        <Button x:Name="Relatorios" Background="#FF1F1F1F" Width="200" Height="45" Margin="25,140" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0" BorderBrush="{x:Null}"/>
        <TextBlock x:Name="Indice" FontSize="60" Foreground="White" Height="80" Width="170" VerticalAlignment="Top" Grid.Row="0" Margin="40,20,323,0" HorizontalAlignment="Left">
                <Bold>Indice</Bold>
        </TextBlock>
        <!--
            <Rectangle Grid.ColumnSpan="1" Fill="Black" Margin="109,38,109,87" Grid.Row="1">
                <Rectangle.RadiusX>20</Rectangle.RadiusX>
                <Rectangle.RadiusY>20</Rectangle.RadiusY>
            </Rectangle>
            -->
        <Rectangle Grid.ColumnSpan="1" Fill="Black" Margin="109,38,109,87" Grid.Row="1" Grid.Column="1">
            <Rectangle.RadiusX>20</Rectangle.RadiusX>
            <Rectangle.RadiusY>20</Rectangle.RadiusY>
        </Rectangle>
        <Rectangle Grid.ColumnSpan="1" Fill="Black" Margin="109,38,109,87" Grid.Row="1" Grid.Column="2">
            <Rectangle.RadiusX>20</Rectangle.RadiusX>
            <Rectangle.RadiusY>20</Rectangle.RadiusY>
        </Rectangle>
        <!-- Status OS -->
        <!--
            <Border CornerRadius="10" Background="#FF1F1F1F" Margin="122,125,122,106" Grid.Row="1">
                <Button x:Name="Finished" Background="#FF1F1F1F" Margin="122,125,122,106" Height="75"/>
            </Border>
            -->
        <Border CornerRadius="10" Background="#FF1F1F1F" Margin="122,125,122,106" Grid.Row="1" Grid.Column="1">
            <Button x:Name="Pending" Background="#FF1F1F1F" Margin="122,125,122,106" Height="75" Grid.Column="1" />
        </Border>
        <Border CornerRadius="10" Background="#FF1F1F1F" Margin="122,125,122,106" Grid.Row="1" Grid.Column="2" >
            <Button x:Name="Cancelled"  Background="#FF1F1F1F" Margin="122,125,122,106" Height="75" Grid.Column="2"/>
        </Border>
        <Rectangle Grid.Row="1" Fill="Black" Grid.ColumnSpan="3" Height="452" Margin="350,253,350,0" Grid.RowSpan="2">
            <Rectangle.RadiusX>30</Rectangle.RadiusX>
            <Rectangle.RadiusY>30</Rectangle.RadiusY>
        </Rectangle>
        <!-- Navegação -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
